{
  "name": "regex-lite",
  "module": "index.ts",
  "type": "module",
  "version": "0.1.0",
  "description": "A TypeScript utility library for building and validating regular expressions with ease.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "bun": "./index.ts"
  },
  "scripts": {
    "test": "jest",
    "build": "bun build ./index.ts --outdir ./dist && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.json",
    "prepare": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gift-Stack/regex-lite.git"
  },
  "keywords": [
    "regex",
    "typescript",
    "utility",
    "validation"
  ],
  "author": "Gift Opia <gkenny896@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gift-Stack/regex-lite/issues"
  },
  "homepage": "https://github.com/Gift-Stack/regex-lite#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "bun-types": "latest",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
